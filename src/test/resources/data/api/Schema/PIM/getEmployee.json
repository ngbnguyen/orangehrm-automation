{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["data", "meta", "rels"],
  "properties": {
    "data": {
      "type": "array"
    },
    "meta": {
      "type": "object",
      "required": ["total"],
      "properties": {
        "total": {
          "type": "integer",
          "required": [ "empNumber", "lastName", "firstName", "middleName", "employeeId", "terminationId", "jobTitle", "subunit", "empStatus", "supervisors"
          ],
          "properties": {
            "empNumber": {"type": "integer"},
            "lastName": {"type": "string"},
            "firstName":  {"type": "string"},
            "middleName":  {"type": "string"},
            "employeeId": {"type": ["string", "null"]},
            "terminationId": {"type": ["integer", "null"]},
            "jobTitle": {
              "type": "object",
              "required": ["id", "title", "isDeleted"],
              "properties": {
                "id": {"type": ["integer", "null"]},
                "title": {"type": ["string", "null"]},
                "isDeleted": {"type": ["boolean", "null"]}
              },
              "additionalProperties": false
            },
            "subunit": {
              "type": "object",
              "required": ["id", "name"],
              "properties": {
                "id": {"type": ["integer", "null"]},
                "name": {"type": ["string", "null"]}
              },
              "additionalProperties": false
            },

            "empStatus": {
              "type": "object",
              "required": ["id", "name"],
              "properties": {
                "id": {"type": ["integer", "null"]},
                "name": {"type": ["string", "null"]}
              },
              "additionalProperties": false
            },

            "supervisors": {
              "type": "array"
            }
          }
        }
      }
    },
    "rels": {
      "type": "array"
    }
  }
}